{
    "name": "nsrosenqvist/phpunit-inline",
    "description": "PHPUnit extension for writing tests inline with application code using native #[Test] attributes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Niklas Rosenqvist",
            "email": "niklas.s.rosenqvist@gmail.com"
        }
    ],
    "bin": [
        "bin/phpunit-inline",
        "bin/phpunit-inline-strip"
    ],
    "require": {
        "php": "^8.2",
        "phpunit/phpunit": "^11.0 || ^12.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "NSRosenqvist\\PHPUnitInline\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "NSRosenqvist\\PHPUnitInline\\Tests\\": "tests/",
            "E2E\\": "tests/Fixtures/runner/src/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "phpstan-extension.neon"
            ]
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test:unit": "phpunit --testdox --testsuite=Unit",
        "test:integration": "phpunit --testdox --testsuite=Integration",
        "test:e2e": "phpunit --testdox --testsuite=E2E",
        "test:e2e:runner": "./bin/phpunit-inline --scan-directories=tests/Fixtures/runner/src",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyze --memory-limit=256M",
        "analyze:baseline": "phpstan analyze --memory-limit=256M --generate-baseline",
        "analyse": "@analyze",
        "analyse:baseline": "@analyze:baseline",
        "format": "php-cs-fixer fix --allow-risky=yes",
        "format:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "check": [
            "@format:check",
            "@analyze",
            "@test",
            "@test:e2e:runner"
        ]
    }
}
